@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@*<div class="d-flex">
    <a asp-action="Create" class="btn btn-success ms-auto my-2">+ Add movie</a>
</div>*@

<div class="container-fluid">
    @if (Model.Any())
    {
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class="card col-sm-3 shadow">
                    <img src="~/images/userphoto.jpg" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5>Details</h5>
                        <h6>@item.FirstName</h6>
                        <h6>@item.LastName</h6>
                        <h6>@item.Email</h6>
                    </div>
                    <div class="card-footer d-flex">
                        <div class="btn-group ms-auto">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this user?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No users were found. Please
            <a asp-action="Create" class="alert-link">Add a user.</a> first.
        </div>
    }

